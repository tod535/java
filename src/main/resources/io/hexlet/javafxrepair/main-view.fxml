<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.hexlet.javafxrepair.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Заявки">
      <font>
         <Font size="20.0" />
      </font></Label>
   <TableView fx:id="tableView" maxHeight="400.0" prefWidth="760.0">
     <columns>
       <TableColumn fx:id="tableColumn1" prefWidth="75.0" text="Начало" />
       <TableColumn fx:id="tableColumn2" prefWidth="75.0" text="Тип техники" />
         <TableColumn fx:id="tableColumn3" prefWidth="124.0" text="Модель" />
         <TableColumn fx:id="tableColumn4" minWidth="0.0" prefWidth="37.0" text="Проблема" />
         <TableColumn fx:id="tableColumn5" prefWidth="75.0" text="Статус" />
         <TableColumn fx:id="tableColumn6" prefWidth="75.0" text="Окончание" />
         <TableColumn fx:id="tableColumn7" prefWidth="75.0" text="Запчасти" />
         <TableColumn fx:id="tableColumn8" prefWidth="75.0" text="Мастер" />
         <TableColumn fx:id="tableColumn9" prefWidth="75.0" text="Клиент" />
     </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
   <Button fx:id="addRequest" mnemonicParsing="false" text="Добавить новую заявку" />
</VBox>
